# API Configuration
SECRET_KEY=your-secret-key-change-this-to-random-string
ENVIRONMENT=development
API_PORT=8000

# Database
DATABASE_URL=postgresql://receipts_user:receipts_pass@localhost:5432/receipts_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage (MinIO/S3)
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=receipts
MINIO_SECURE=false

# For AWS S3 (alternative)
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Google Gemini API
GOOGLE_API_KEY=your-gemini-api-key-here

# OCR Configuration
OCR_ENGINE=tesseract  # tesseract or easyocr
TESSERACT_CMD=tesseract  # path to tesseract executable

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourapp.com

# Frontend
REACT_APP_API_URL=http://localhost:8000

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Monitoring (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
